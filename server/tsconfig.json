{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@database/*": [
        "./src/database/*"
      ],
      "@http/*": [
        "./src/http/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@interface/*": [
        "./src/interface/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
    }
  }
}
